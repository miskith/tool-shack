{
  "compilerOptions": {
    "target": "ES6",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "importHelpers": true,
    "baseUrl": ".",
    "declaration": true,
    "outDir": "./dist",
    "lib": [
      "dom",
      "es2018"
    ],
  },
  "include": [
    "src/**/*.ts"
  ]
}
